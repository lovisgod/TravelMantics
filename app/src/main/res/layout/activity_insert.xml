<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InsertActivity">


    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/deal_title"
            android:ems="10"
            android:id="@+id/txttitle"
            android:layout_marginStart="@dimen/right_left_standard"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/right_left_standard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/right_left_standard"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/price_number_only"
            android:id="@+id/txtprice"
            android:inputType="numberDecimal"
            android:layout_marginStart="@dimen/right_left_standard"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/right_left_standard"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txttitle"
            android:layout_marginTop="@dimen/right_left_standard"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/description"
            android:id="@+id/txtdescription"
            android:layout_marginTop="@dimen/right_left_standard"
            app:layout_constraintTop_toBottomOf="@+id/txtprice"
            android:layout_marginStart="@dimen/right_left_standard"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="@dimen/right_left_standard"
            app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            app:srcCompat="@mipmap/ic_launcher_round"
            android:id="@+id/deal_image"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txtdescription"
            app:layout_constraintStart_toStartOf="@+id/txtdescription"/>
    <Button
            android:text="@string/pick_image"
            android:background="@color/colorAccent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pick_image"
            app:layout_constraintStart_toEndOf="@+id/deal_image"
            android:textStyle="bold"
            android:textColor="#fff"
            android:padding="5dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/deal_image"/>
</androidx.constraintlayout.widget.ConstraintLayout>